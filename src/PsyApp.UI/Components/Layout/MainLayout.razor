@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row">
            <div class="d-flex align-items-center">
                <h1 class="mb-0 text-primary-custom">Psychology Platform</h1>
            </div>
            <div class="d-flex align-items-center">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="me-3">Documentation</a>
                <AuthorizeView>
                    <Authorized>
                        <span class="text-secondary-custom">Welcome, Dr. @context.User.Identity?.Name</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="alert alert-danger" role="alert">
        <strong>An error has occurred.</strong>
        <p class="mb-0">This application may no longer respond until reloaded.</p>
        <div class="mt-2">
            <a href="." class="btn btn-outline-primary btn-sm me-2">Reload</a>
            <button class="btn btn-outline-secondary btn-sm" onclick="document.getElementById('blazor-error-ui').style.display='none'">Dismiss</button>
        </div>
    </div>
</div>
